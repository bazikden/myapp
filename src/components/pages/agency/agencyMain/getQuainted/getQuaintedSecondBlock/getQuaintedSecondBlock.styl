.getQuaintedSecondBlock
  margin 0 auto
  padding-top 40px
  .getQuaintedSecondBlockH2
    text-align center
    max-width: 534px
    //height: 91px
    font-family: 'Overpass',sans-serif
    font-size: 42px
    font-weight: 600
    color: #000000
    margin 0 auto
  .getQuaintedSecondBlockItems
    margin 51px 0 142px
    display flex
    justify-content space-between
    flex-wrap wrap
    .getQuaintedSecondBlockItem
      max-width 365px
      .getQuaintedSecondBlockItemText

        h3
          margin 30px 0 15px
          font-family: 'Overpass'
          font-size: 26px
          font-weight: 600
          color: #000000
        p
          font-family: 'Source Sans Pro'
          font-size: 16px;
          color: #4c4b4b;

@media (max-width: 1024px)
  .getQuaintedSecondBlock
    .getQuaintedSecondBlockItems
      justify-content space-around
      .getQuaintedSecondBlockItem
        max-width 275px

@media (max-width: 768px)
  .getQuaintedSecondBlock

    .getQuaintedSecondBlockItems
      flex-direction column
      //justify-content space-around
      .getQuaintedSecondBlockItem
        flex-basis 90%
        margin 0 auto
        max-width 90%
        display flex
        justify-content space-between
        .getQuaintedSecondBlockItemText
          margin-left 37px


@media (max-width: 425px)
  .getQuaintedSecondBlock
    .getQuaintedSecondBlockH2
      max-width 280px
      font-size 26px
    .getQuaintedSecondBlockItems
      .getQuaintedSecondBlockItem
        flex-direction column
        margin 0 auto
        text-align center


        .getQuaintedSecondBlockItemText
          flex-basis 80%
          margin 0

          p
            max-width 463px