.get-quainted-first-block
  display flex
  justify-content space-between
  margin 100px auto 41px
  padding-top 40px

  .get-quainted-first-block-img
    width 289px
    height 285px
    margin 92px 66px 0 36px

  .headerH2Mobile
    width: 395px
    height: 40px
    font-family: 'Overpass'
    font-size: 42px
    font-weight: 600
    color: #000000
    margin-bottom 52px
    flex-basis 100%
    text-align center
    display none

  .get-quainted-first-block-info
    h2
      width: 395px
      height: 40px
      font-family: 'Overpass'
      font-size: 42px
      font-weight: 600
      color: #000000
      margin-bottom 52px

    h3
      width: 340px
      font-family: 'Overpass'
      font-size: 26px
      font-weight: 600
      color: #000000
      margin-left 15px

    .get-quainted-first-block-info-text
      margin 6px 0 16px 15px
      max-width 749px

      p
        font-family: 'Source Sans Pro', sans-serif
        font-size: 16px
        color: #4c4b4b

    .get-quainted-first-block-info-signup
      display block
      margin-left 15px
      font-family: 'Source Sans Pro'
      font-size: 22px
      font-weight: bold
      color: #ef6c00

@media (max-width: 1024px)
  .get-quainted-first-block
    flex-wrap wrap
    justify-content flex-start

    .get-quainted-first-block-img
      margin 0 30px 0 36px

    .headerH2Mobile
      display block

    .get-quainted-first-block-info
      margin-right 25px

      h2
        display none

      h3
        margin-left 0

      .get-quainted-first-block-info-text
        margin-left 0
        max-width 612px
        color #27aae1

@media (max-width: 768px)
  .get-quainted-first-block
    margin-top 118px

    .get-quainted-first-block-img
      margin 0 30px 0 25px
      width 219px
      height 216px

      img
        width 100%
        height 100%

    .get-quainted-first-block-info
      .get-quainted-first-block-info-text
        max-width 460px

        > p
          font-size 12px

@media (max-width: 425px)
  .get-quainted-first-block
    margin-top 118px

    .headerH2Mobile
      font-size 26px
      margin-bottom 29px

    .get-quainted-first-block-img
      margin 0 auto
      width 219px
      height 216px

      img
        width 100%
        height 100%

    .get-quainted-first-block-info
      margin 0 auto

      h3
        font-size 22px
        text-align center
        max-width 188px
        margin 30px auto 20px

      .get-quainted-first-block-info-text
        max-width 285px
        text-align center
        margin 0 auto


        p
          font-size 12px

      .get-quainted-first-block-info-signup
        display block
        text-align center
        margin 0 auto

