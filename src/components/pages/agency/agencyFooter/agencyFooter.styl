.agencyFooter
  max-width 100%
  min-height 313px
  background #283593
  .agencyFooterLayout
    max-width 1140px
    margin 0 auto
    display grid
    grid-template-areas "header header header header header""first second third fourth fifth""footer footer footer footer footer"
    grid-template-rows: 83px 1fr 83px
    grid-template-columns: 31.5% repeat(4,1fr)


    span
      font-family: 'Source Sans Pro'
      color: #ffffff

    .agencyFooterHeader
      grid-area header
      .agency-header-menu
        display flex
        .agency-header-menu-item
          padding 0 15px
          text-decoration none
          font-family: 'Source Sans Pro',sans-serif
          font-size: 16px
          color: white
          font-weight 500


    .first
      margin 30px 0 37px
      grid-area first
      span
        font-family: 'Source Sans Pro'
        font-size: 20px
        color: #ffffff

    .second
      grid-area second

    .third
      grid-area third

    .fourth
      grid-area fourth

    .fifth
      grid-area fifth

    .second,.third,.fourth,.fifth
      margin 30px 0 37px
      //grid-area second
      display flex
      flex-direction column
      justify-content space-between
      span
        font-size 16px



    .agencyFooterFooter
      grid-area footer
      display flex
      justify-content space-between
      align-items center
      color: #ffffff
      .agencyFooterFooterIcons
        width 218px
        display flex
        justify-content space-between
        img
          cursor pointer

@media (max-width: 1024px)
  .agencyFooter
    .agencyFooterLayout
      padding 0 48px

@media (max-width: 768px)
  .agencyFooter
    .agencyFooterLayout
      padding 0 48px

      .first
        display flex
        flex-direction column
        justify-content space-between
        img
          display none
        span
          font-size 18px

      .second,.third,.fourth,.fifth
        span
          font-size 16px



@media (max-width: 425px)

  .agencyFooter
    .agencyFooterLayout
      grid-template-areas "header header header header header""first first first first first""footer footer footer footer footer"
      grid-template-rows: 1.5fr 1fr 100px
      .agencyFooterHeader
        display flex
        flex-direction column
        flex-wrap wrap
        justify-content center
        //max-height 400px
        .agency-header-menu
          margin-top 20px
          flex-direction column
          justify-content center
          text-align center
        .agencyFooterHeaderMenu
          display flex
          flex-direction column
          text-align center
          align-content center

      .first
        div
          max-width 100%
          text-align center


      //margin 20px 0
      .second,.third,.fourth,.fifth
        display none

      .agencyFooterFooter
        flex-direction column-reverse
        .agencyFooterFooterInfo
          margin 19px 0 30px
          font-size 12px


@import "./agencyFooterHeader/agencyFooterHeader.styl"