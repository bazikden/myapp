.right-side
  flex-basis 20%
  height 100%
  position relative
  background white
  display flex
  align-items center


  &-user-container
    order 1
    h2
      font-size 20px
      color #6d6e71
      padding-left 20px
      text-align center
    .right-side-user
      display flex
      flex-wrap wrap
      margin 20px 0 20px 20px
      border-bottom 1px solid lightgray
      width 90%


      .right-side-user-logo
        background white
        z-index 2
        position relative
        bottom -1px
        img
          width 40px
          height 40px
          border-radius 20px
          border 1px solid #6d6e71
          display block


      .right-side-user-info
        margin-left 10px
        min-width 100px

        .right-side-user-name
          margin-bottom 10px

        &-addfriend
          color #8dc63f



@media all and (max-width: 1024px)
  .right-side-user
    justify-content center

@media all and (max-width: 768px)
  .right-side
    display none
    flex-basis 0