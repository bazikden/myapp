.left-side
  flex-basis 25%
  height 100%
  transition 2s


  .left-side-block
    width 100%



    .profile-card
      width 70%
      background: linear-gradient(to bottom, rgba(39,170,225,.8), rgba(28,117,188,.8)) no-repeat
      background-size: cover
      min-height: 90px
      border-radius: 15px
      color: #fff
      margin-bottom 40px
      position relative
      display flex
      justify-content space-between
      flex-wrap wrap
      margin 40px auto

      .profile-card-block
        font-size 16px
        margin 10px

      div:first-of-type
        margin-bottom 10px


      img
        width 80px
        height 80px
        border-radius 40px
        position relative
        left 20px
        top -25px


    .social-links-block
      display flex
      margin 0 45px
      border-bottom 1px solid #f1f2f2
      width 65%

      .social-links-logo
        background white
        position relative
        bottom -1px
        img
          bottom -1px
          width 20px
          height 20px
          margin 10px

      .social-links
        display block
        position relative
        text-decoration none
        font-size 20px
        font-weight 200
        color #6d6e71
        top 8px

    .social-chat
      max-width 150px
      margin 40px auto 0

      .social-chat-btn
        width 150px
        height 30px
        background lime
        color white
        border-radius 20px
        border none
        display block
        margin 0 auto 20px


      .social-chat-icons
        display flex
        flex-wrap wrap
        img
          display block
          width 60px
          height 60px
          border-radius 30px
          border 1px solid dimgrey
          margin 5px auto


