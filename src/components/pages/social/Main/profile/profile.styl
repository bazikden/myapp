.main-social
  flex-basis 60%
  height 100%
  z-index 50

  .main-social-img
    width 100%
    height 300px
    background url("https://images.unsplash.com/photo-1528642474498-1af0c17fd8c3?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80") top center no-repeat
    background-size cover
    opacity 0.7
  .profile-avatar
    display flex
    margin-top 20px
    .profile-avatar-block
      display
      .profile-avatar-img
        width 120px
        height 150px
        margin-left 30px

      &-addimage
        position relative
        max-width 120px
        margin 10px 0 0 30px
        input
          display block
          z-index 2
          opacity 0
          width 100%
        button
          position absolute
          z-index -1
          left 0
          top 0
          width 100%

    .profile-avatar-info
      padding-left 20px
      color darkblue
      font-weight 600

      .profile-avatar-contacts-socials
        margin-left 30px




@media  (max-width: 768px)
  .main-social
    flex-basis 75%
    margin-top 20px
    .main-social-img

      width 90%
      margin 0 auto
      height 200px
    .profile-avatar
      flex-wrap wrap

