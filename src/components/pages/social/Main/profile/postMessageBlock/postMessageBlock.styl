.post-message-container
  display flex
  justify-content space-between
  border-bottom 1px solid #f1f2f2
  margin 0 30px
  height 150px
  align-items center
  margin-bottom 20px
  position relative
  img
    width 50px
    height 50px
    border-radius 25px

  .login-elem
    width 70%
    textarea
      padding 5px
      max-width 800px
      height 50px
      border-radius 10px
      outline none

  .post-message-logo-block
    height 20px

    img
      width 20px
      height 20px
      margin 0 3px


  .post-message-btn
    display block
    width 100px
    height 40px
    border none
    border-radius 15px
    background #27aae1
    color white
    font-weight 600
    align-self flex-end
    position relative
    bottom 10px
    right 20px
    outline none


@media (max-width: 425px)
  .post-message-container
    flex-wrap wrap
    justify-content  center
    align-items center
    height 200px
    .post-message-btn
      right 0
      align-self center
      margin 10px 0 0 10px
