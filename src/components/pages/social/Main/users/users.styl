.users

  .spinner

    img
      width 100%
      height 200px
      display block
      margin 100px auto

  .users-nav-panel
    display flex
    justify-content center
    margin 10px 0
    &-prev,&-next
      width 30px
      height 30px
      margin 0 10px
      img
        width 100%
        height 100%

    .users-nav-btn
      margin 0 2px
      background: linear-gradient(to bottom, rgba(39,170,225,0.8), rgba(28,117,188,0.8)) no-repeat;
      color white
      width 30px
      border none
      &-active
        width 30px
        box-sizing border-box
        border 2px solid  rgba(39,170,225,0.8)
        background white
        //color rgba(39,170,225,0.8)

  .users-list
    max-width 100%
    display flex
    justify-content center
    margin 0 auto
    flex-wrap wrap
    .user
      flex-basis 30%
      display flex
      flex-direction column
      justify-content center
      &-icon
        cursor pointer
        img
          display block
          margin 10px auto
          width 150px
          height 150px

        &-btn
          display block
          margin 0 auto

      &-info
        margin-top 30px

        .user-name
          margin-bottom 30px
          text-align center
          font-size 20px
          text-transform uppercase


