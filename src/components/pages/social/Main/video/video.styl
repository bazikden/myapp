.video

  display flex
  margin 10px;

  .video-player
    flex-basis 70%

    .video-player-frame
      width 95%
      height 300px
      display block
      margin 0 auto

  .video-list
    flex-basis 30%
    line-height 0
    .video-item
      &:after
        color #27aae1
        content ''
        display block
        height 10px
        border-bottom 1px solid #6d6e71
        margin-bottom 10px

      &:last-child
        margin-bottom -11px



      img
        width 100%
      span
        font-family "Times New Roman"
        font-size 12px
        line-height 1.4

@media (max-width: 768px)
  .video
    flex-wrap wrap
    .video-player
      flex-basis 100%
    .video-card
      width 100%
    .makeStyles-card-223
      max-width 100%
    .makeStyles-card-213
      max-width  100%

    .video-list
      flex-basis 100%
      width 100%
      .video-item
        display flex
        margin 10px
        img
          width 30%

        div
          margin   10px 0 0 10px
          span
            max-width 50%
            font-size 16px