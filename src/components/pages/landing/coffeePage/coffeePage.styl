.banner
  height: 260px
  background: url('./components/pages/landing/img/Coffee_bg.jpg') center center no-repeat
  background-size: cover
  .title-big
    margin-top: 60px
.shop
  padding: 70px 0 40px 0
  .container
    padding 0
    margin 0 auto
    padding 0

    .row-about
      display flex
      justify-content center
      flex-wrap wrap

    .beanslogo
      margin 20px auto
    .search__coffee-bar
      justify-content center
      ///.shop

  .title
    margin-top: 10px
  &__girl
    display: block
    margin: 0 auto
    max-width 400px
  &__text
    margin-top: 25px
    font-size: 14px
    text-align: center
  &__search
    margin 5px 0
    min-width  310px
    display flex
    justify-content center
    &-label
      margin-right: 20px
      display block
    &-input
      display block
      width: 180px
      height: 30px
      box-shadow: 4px 4px 20px rgba(0, 0, 0, 0.25)
      border: none
      border-radius: 4px
      font-size: 12px
      padding: 0 15px
      &::placeholder
        text-align: center
  &__filter
    margin 5px 0
    display: flex
    justify-content center
    align-items: center

    &-label
      display block
      margin-right: 35px
    &-btn

      width: 75px
      height: 30px
      background-color: #fff
      border: none
      box-shadow: 4px 4px 20px rgba(0, 0, 0, 0.25)
      font-size: 12px
      outline: none
      cursor: pointer
      &:first-child
        border-radius: 4px 0px 0px 4px
      &:last-child
        border-radius: 0px 4px 4px 0px
      &:focus
        outline: none
  &__wrapper
    display: flex
    flex-wrap: wrap
    justify-content center
  &__item
    width: 225px
    min-height: 240px
    margin: 60px 40px 0 40px
    padding: 22px 24px
    background: rgba(255, 255, 255, 0.65)
    border-radius: 8px
    box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.25)
    transition: 0.3s all
    &:hover
      box-shadow: 5px 5px 30px rgba(0, 0, 0, 0.25)
    img
      display: block
      margin: 0 auto
      width: 151px
      height: 130px
      object-fit: cover
    &-title, &-price, &-country
      font-size: 14px
      margin-top: 10px
      text-align: right
  &__point
    margin-top: 16px
    span
      font-weight: bold
    &-price
      font-size: 24px
      font-weight: normal !important
    &:first-child
      margin-top: 26px
        
@media (max-width: 768px)
  .shop
    padding 70px 0 0
    &__girl
      padding 0
      margin 0 auto
    &__text
      margin 25px 5px 0
    &__search
      padding 0

    &__filter
      &-label
        margin-right  20px

    &__item
      margin 60px auto 0

@media (max-width: 320px)
  .container
    padding 0
    .shop__girl
      max-width 250px
      height 250px
      display block
      margin 0 auto
      padding 0
