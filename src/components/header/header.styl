.main-page-header
  width 100%
  height 110px
  background #231F20
  display flex
  justify-content space-between
  position fixed
  top 0
  left 0
  z-index 100


  img
    height 60px
    margin 20px

  .header_menu_block
    flex-basis 80%
    display flex
    justify-content space-between
    .header_menu

      display flex
      justify-content center
      align-items center

      a
        text-decoration none
        color white
        margin 0 25px
        font-weight 500
        font-size 18px

    .loginMenu
      display flex
      justify-content space-between
      align-items center
      .loginedUser-block
        margin 0 10px 0
        .header-logineduser-photo
          img
            width 50px
            height 50px
            margin 5px auto
            display block


        .logined
          display block
          margin 0 auto
          text-align center
          text-decoration none
          color white
          &:hover
            color #27aae1

      .headerMenuIcon
        display none
        img
          width 40px
          height 30px
          background transparent





@media  (max-width:768px)
  .main-page-header
    //max-height  80%
    .header_menu_block
      flex-basis 30%
      //right 0
      flex-direction column
      .header_menu
        order 1
        flex-direction column

        background #231F20
        position absolute
        z-index 60
        top 108px
        right 0
        width 225px
        overflow hidden
        max-height  0
        transition 1s

        a
          margin 0
          width 95%
          display block
          padding  15px 20px 15px
          font-size 16px
          text-align right
          cursor pointer
          background #231F20
          &:hover
            color #27aae1

      .header_menu.showed
        max-height 300px
        transition 1s


      .loginMenu
        order 0
        position relative
        align-items center
        margin-top 10px
        .logined
          display block
        .headerMenuIcon
          display block
          position relative



